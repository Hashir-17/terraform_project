pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the Git repository
                git 'https://github.com/Hashir-17/terraform_project.git'
            }
        }

        stage('Set Up Python') {
            steps {
                // Install Python dependencies (pip and pytest)
                sh '''
                # Ensure Python is installed and up to date
                python3 -m pip install --upgrade pip

                # Install pytest
                pip install pytest
                '''
            }
        }

        stage('Run Tests') {
            steps {
                // Run the tests using pytest
                sh '''
                # Run pytest on a basic test file
                pytest test_addition.py
                '''
            }
        }
    }

    post {
        always {
            echo 'Cleaning up after the build.'
        }
        success {
            echo 'Tests passed successfully!'
        }
        failure {
            echo 'Tests failed!'
        }
    }
}
