pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the Git repository
                git 'https://github.com/Hashir-17/terraform_project.git'
            }
        }

        stage('Set Up Python Environment') {
            steps {
                // Set up a Python virtual environment and install dependencies
                sh '''
                # Create a virtual environment using python3
                python3 -m venv venv

                # Activate the virtual environment and install dependencies
                source venv/bin/activate

                # Upgrade pip and install pytest
                pip install --upgrade pip
                pip install pytest
                '''
            }
        }

        stage('Run Tests') {
            steps {
                // Run the tests using pytest in the virtual environment
                sh '''
                # Activate the virtual environment and run the tests using pytest
                source venv/bin/activate
                pytest test_addition.py  # Replace with the path to your test file
                '''
            }
        }
    }

    post {
        always {
            // Clean up the environment after the build (deactivate the virtual environment)
            echo 'Cleaning up environment'
            sh '''
            # Deactivate the virtual environment
            deactivate
            '''
        }

        success {
            echo 'Tests passed successfully!'
        }

        failure {
            echo 'Tests failed!'
        }
    }
}
