# thiz is for testing webhook
pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the Git repository
                git 'https://github.com/Hashir-17/terraform_project.git'
            }
        }

        stage('Set Up Python Environment') {
            steps {
                // Set up Python virtual environment and install dependencies using bash
                sh '''
                # Use bash to create a virtual environment
                bash -c "python3 -m venv venv"
                
                # Activate the virtual environment using bash
                bash -c "source venv/bin/activate && pip install --upgrade pip && pip install pytest"
                '''
            }
        }

        stage('Run Tests') {
            steps {
                // Run the tests using pytest in the virtual environment
                sh '''
                # Activate the virtual environment and run the tests using bash
                bash -c "source venv/bin/activate && cd src && python3 -m pytest test_addition.py"
                '''
            }
        }
    }

    post {
        always {
            // Clean up the environment after the build (deactivate the virtual environment)
            echo 'Cleaning up environment'
            sh '''
            # Deactivate the virtual environment using bash
            bash -c "source venv/bin/activate && deactivate"
            '''
        }

        success {
            echo 'Tests passed successfully!'
        }

        failure {
            echo 'Tests failed!'
        }
    }
}
